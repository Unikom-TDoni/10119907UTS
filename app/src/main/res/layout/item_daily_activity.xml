<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/space_mini_100">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/txt_view_hour"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:textAlignment="center"
        app:fontFamily="@font/rajdhani_bold"
        app:layout_constraintHorizontal_weight="0.2"
        app:layout_constraintBottom_toBottomOf="@id/card_background"
        app:layout_constraintEnd_toStartOf="@id/card_background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/card_background" />

    <androidx.cardview.widget.CardView
        android:id="@+id/card_background"
        android:layout_width="0dp"
        android:layout_height="@dimen/space_large_200"
        android:backgroundTint="@color/navy"
        app:layout_constraintHorizontal_weight="0.8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/txt_view_hour"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view_divider"
        android:layout_width="@dimen/space_mini_60"
        android:layout_height="0dp"
        android:background="@color/blue_eyes"
        android:elevation="@dimen/space_extra_large_125"
        app:layout_constraintBottom_toBottomOf="@id/card_background"
        app:layout_constraintStart_toStartOf="@id/card_background"
        app:layout_constraintTop_toTopOf="@id/card_background" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/txt_view_activity_name"
        android:layout_width="0dp"
        app:fontFamily="@font/rajdhani_bold"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/space_normal_187.5"
        android:layout_marginEnd="@dimen/space_normal_187.5"
        android:elevation="@dimen/space_normal_100"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/card_background"
        app:layout_constraintStart_toStartOf="@id/card_background"
        app:layout_constraintTop_toTopOf="@id/card_background"
        app:layout_constraintVertical_chainStyle="packed" />

</androidx.constraintlayout.widget.ConstraintLayout>